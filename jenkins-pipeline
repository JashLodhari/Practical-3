#!/usr/bin/env groovy

pipeline {
  agent any
tools{
  maven "Maven1"
}
  stages {
    stage('Validate Maven Project') {
      steps {
        script {
          bat 'mvn validate'
        }
      }
    }
    stage('Building Maven Project') {
      steps {
        script {
          bat 'mvn build'
        }
      }
    }
    stage('Test Maven Project') {
      steps {
        script {
          bat 'mvn test'
        }
      }
    }
    stage('Package Maven Project') {
      steps {
        script {
          bat 'mvn package'
        }
      }
    }
  }
}
